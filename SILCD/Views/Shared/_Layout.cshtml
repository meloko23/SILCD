<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sistema de Informações Legislativas da Câmara dos Deputados</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/cssDataTables")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <span class="badge pull-right" style="margin:15px;">beta</span>
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("SILCD", "Index", "Home", null, new { @class = "navbar-brand title" })
            </div>
            <div class="navbar-collapse collapse pull-right">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Deputados", "Index", "Deputados")</li>
                    <li>@Html.ActionLink("Comissões", "Index", "Comissoes")</li>
                    <li>@Html.ActionLink("Proposições", "Index", "Proposicoes")</li>
                </ul>
                <form class="navbar-form navbar-right" role="search">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Pesquisar" title="Pesquise rapidamente por deputados (nome, partido ou uf)">
                    </div>
                    <button type="submit" class="btn btn-info">
                        <span class="glyphicon glyphicon-search"></span>
                    </button>
                </form>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/dataTables")
        @RenderSection("scripts", required: false)

        @RenderBody()
        <hr />
        <footer class="footer text-center">
            <p>&copy; @DateTime.Now.Year - Sistema de Informações Legislativas da Câmara dos Deputados</p>
        </footer>
    </div>


</body>
</html>
