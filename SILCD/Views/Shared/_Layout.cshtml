<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sistema de Informações Legislativas da Câmara dos Deputados</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/CarroisGothicCss")
    @Styles.Render("~/Content/cssgridmvc")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="Topo"></div>
    <div class="navbar navbar-default navbar-fixed-top">
        <span class="badge pull-right" style="margin:15px;">beta</span>
        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("Silcd", "Index", "Home", null, new { @class = "navbar-brand title bold" })
                <small id="smallTitle">Sistema de Informações Legislativas da Câmara dos Deputados</small>
            </div>
            <div class="navbar-collapse collapse pull-right">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Deputados <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="@Url.Action("Index", "Deputados")">
                                    <span class="glyphicon glyphicon-list"></span>
                                    Listar
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("DistribuicaoPorUF", "Deputados")">
                                    <span class="glyphicon glyphicon-signal"></span>
                                    Distribuição por UF
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("DistribuicaoPorPartido", "Deputados")">
                                    <span class="glyphicon glyphicon-tasks"></span>
                                    Distribuição por Partido
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Órgãos Legislativos <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="@Url.Action("Index", "Orgaos")">
                                    <span class="glyphicon glyphicon-list"></span>
                                    Listar
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li><a href="@Url.Action("Sobre", "Home")">Sobre</a></li>
                </ul>
                <form class="navbar-form navbar-right" role="search" action="@Url.Action("Index", "Deputados")">
                    <div class="form-group">
                        <input id="txtPesquisa" name="txtPesquisa" type="text" class="form-control" placeholder="Pesquisar deputados" title="Pesquise rapidamente por deputados (nome, partido ou uf)">
                    </div>
                    <button type="submit" class="btn btn-info">
                        <span class="glyphicon glyphicon-search"></span>
                    </button>
                </form>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/gridmvc")
        @RenderSection("scripts", required: false)

        @RenderBody()
        <div class="navbar navbar-default navbar-fixed-bottom">
            <footer class="footer panel-footer text-center">
                <p>&copy; @DateTime.Now.Year - Sistema de Informações Legislativas da Câmara dos Deputados</p>
            </footer>
        </div>
    </div>

</body>
</html>
